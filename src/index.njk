<h2>Latest intelligence</h2>

<ul>
  {% for post in collections.intelligence %}
  {% if loop.index0 < 10 %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title or post.fileSlug }}</a>
    {% if post.date %}<small> — {{ post.date | date }}</small>{% endif %}
  </li>
  {% endif %}
  {% endfor %}
</ul>

<p><a href="/intelligence/">Browse the archive</a></p>

<h2>Latest Metaviews podcast episodes</h2>

{% if captivate and captivate.items and (captivate.items | length) %}
<div class="podcast-grid">
  {% for ep in captivate.items %}
  {% if loop.index0 < 6 %}
  <article class="podcast-card">
    <a
      class="podcast-thumb"
      href="/programming/podcasts/metaviews/episodes/{{ ep.slug }}/"
    >
      {% if ep.image %}
      <img src="{{ ep.image }}" alt="{{ ep.title }}" loading="lazy" />
      {% else %}
      <div class="thumb-fallback" aria-hidden="true"></div>
      {% endif %}
    </a>

    <div class="podcast-body">
      <div class="podcast-meta">
        <span class="podcast-show">Metaviews</span>
        {% if ep.pubDate %}
        <span class="podcast-date">• {{ ep.pubDate | postDate }}</span>
        {% endif %}
      </div>

      <h3 class="podcast-title">
        <a href="/programming/podcasts/metaviews/episodes/{{ ep.slug }}/"
          >{{ ep.title }}</a
        >
      </h3>

      {% if ep.summary %}
      <p class="podcast-summary">{{ ep.summary }}</p>
      {% endif %}
    </div>
  </article>
  {% endif %}
  {% endfor %}
</div>

<p style="margin-top: 14px">
  <a href="/programming/podcasts/metaviews/">Browse all Metaviews episodes →</a>
</p>
{% else %}
<p><em>No podcast episodes available.</em></p>

{% endif %}

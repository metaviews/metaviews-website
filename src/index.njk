  <article class="podcast-card">
    <a
      class="podcast-thumb"
      href="{{ ep.link }}"
      target="_blank"
      rel="noopener"
    >
      {% if ep.image %}
      <img src="{{ ep.image }}" alt="{{ ep.title }}" loading="lazy" />
      {% else %}
      <div class="thumb-fallback" aria-hidden="true"></div>
      {% endif %}
    </a>

    <div class="podcast-body">
      <div class="podcast-meta">
        <span class="podcast-show">Metaviews</span>
        {% if ep.date %}
        <span class="podcast-date">• {{ ep.date | postDate }}</span>
        {% endif %}
      </div>

      <h3 class="podcast-title">
        <a href="{{ ep.link }}" target="_blank" rel="noopener"
          >{{ ep.title }}</a
        >
      </h3>

      {% if ep.summary %}
      <p class="podcast-summary">{{ ep.summary }}</p>
      {% endif %}
    </div>
  </article>
  {% endfor %}
</div>

<p style="margin-top: 14px">
  <a href="/programming/podcasts/metaviews/">Browse all Metaviews episodes →</a>
</p>

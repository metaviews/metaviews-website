---
layout: layouts/base.njk
pagination:
  data: captivate.items
  size: 1
  alias: episode
permalink: "programming/podcasts/metaviews/episodes/{{ episode.slug }}/index.html"
eleventyComputed:
  title: "{{ episode.title }}"
---

<article class="episode">
  <h1>{{ episode.title }}</h1>

  <p>
    {% if episode.pubDate %}<span>{{ episode.pubDate | postDate }}</span>{% endif %}
    {% if episode.duration %}<span> — {{ episode.duration }}</span>{% endif %}
    {% if episode.episodeNumber %}<span>
      — Episode {{ episode.episodeNumber }}</span
    >{% endif %}
  </p>

  {% if episode.enclosureUrl %}
  <audio controls preload="none" style="width: 100%; margin: 10px 0">
    <source src="{{ episode.enclosureUrl }}" />
    Your browser does not support the audio element.
  </audio>
  {% endif %} {% if episode.contentHtml %}
  <div class="episode-notes">{{ episode.contentHtml | safe }}</div>
  {% elseif episode.excerpt %}
  <p>{{ episode.excerpt }}</p>
  {% endif %}
</article>
